   <children>
      <ImageView fitHeight="439.0" fitWidth="581.0" opacity="0.29" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/looginGIF.gif" />
         </image>
      </ImageView>
      <AnchorPane layoutX="620.0" layoutY="37.0" opacity="0.84" prefHeight="361.0" prefWidth="323.0" styleClass="formBackground" stylesheets="@../../styles/LoginStyling.css">
         <children>
            <TextField fx:id="username" layoutX="21.0" layoutY="89.0" prefHeight="42.0" prefWidth="276.0" promptText="username" styleClass="text-field" stylesheets="@../../styles/LoginStyling.css" />
