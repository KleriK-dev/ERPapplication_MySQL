            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/Actions-edit-clear-icon.png" />
               </image></ImageView>
            </graphic>
        </Button>
        <Button fx:id="closeButton" layoutX="499.0" layoutY="241.0" mnemonicParsing="false" onAction="#closeWindow" text="Cancel">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/cancel-icon.png" />
               </image></ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
